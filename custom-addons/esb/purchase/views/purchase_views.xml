<odoo>
    <!-- Copyright 2020 Ecosoft Co., Ltd (http://ecosoft.co.th/)-->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_order_type.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_type']" position="before">
                <field name="po_created" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_type']" position="attributes">
                <attribute name="attrs">{'readonly': [('po_created', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='date_planned']" position="after">
                <field name="mo_ref" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='date_planned']" position="after">
                <field name="mo_ref"/>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_line_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_planned']" position="after">
                <field name="mo_ref"/>
            </xpath>
            <xpath expr="//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_line_form2" model="ir.ui.view">
        <field name="name">purchase.order.line.form2</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_planned']" position="after">
                <field name="mo_ref" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_line_search" model="ir.ui.view">
        <field name="name">purchase.order.line.search</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="mo_ref" string="MO Reference" filter_domain="[('mo_ref', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
    <!-- Hide secondary uom -->
    <record id="purchase_order_form_hide_secondary_uom" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_order_secondary_unit.purchase_order_form" />
        <field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='secondary_uom_qty']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='secondary_uom_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
    <!-- ESB Discount -->
    <record id="purchase_order_form_hide_discount" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_triple_discount.purchase_order_triple_discount_form_view" />
        <field name="arch" type="xml">
            <!-- Hide discount 2, 3 -->
            <xpath expr="//field[@name='order_line']//tree//field[@name='discount2']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='discount3']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='discount2']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='discount3']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <!-- Add discount fields -->
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <label for="discount_last"/>
                <div class="oe_inline">
                    <field name="discount_last" class="oe_inline" attrs="{'readonly': [('state', 'in' , ('done', 'cancel'))]}"/> %
                    <field name="discount_last_amount" nolabel="1" class="oe_inline oe_right"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//kanban//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//kanban//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
        </field>
    </record>
</odoo>
